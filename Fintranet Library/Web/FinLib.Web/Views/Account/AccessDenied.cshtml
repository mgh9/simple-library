@{
    Layout = null;
}

@{
    string pageTitle = $"Access denied";
}

<!doctype html>
<!--[if lte IE 9]> <html class="lte-ie9" lang="en" dir="rtl"> <![endif]-->
<!--[if gt IE 9]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    @*Remove Tap Highlight on Windows Phone IE*@
    <meta name="msapplication-tap-highlight" content="no" />
    <link rel="icon" type="image/png" href="/assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/assets/img/favicon-32x32.png" sizes="32x32">
    <title>@pageTitle</title>

    @*uikit*@
    <link rel="stylesheet" href="/assets/css/uikit.min.css" media="all">

    @*altair admin error page*@
    <link rel="stylesheet" href="/assets/css/error_page.min.css" />

    @*custom styles*@
    <link rel="stylesheet" href="/css/base.min.css" />

</head>
<body class="error_page">
    <div class="error_page_header">
        <div class="uk-width-8-10 uk-container-center">
            There is something wrong
        </div>
    </div>
    <div class="error_page_content">
        <div class="uk-width-8-10 uk-container-center">
            <p class="heading_b">Access Denied</p>

            <p class="uk-text-large">
                You don't have permission to this resource
            </p>

            <p class="uk-text-muted">
                Your ip address : @Context.Connection.RemoteIpAddress
            </p>

            <a href="/">Back to the main page</a>
            
        </div>
    </div>
    <script>
        //check for theme
        if (typeof (Storage) !== "undefined") {
            var root = document.getElementsByTagName('html')[0],
                theme = localStorage.getItem("altair_theme");
            
            if (theme == 'app_theme_dark' || root.classList.contains('app_theme_dark')) {
                root.className += ' app_theme_dark';
            }
        }
    </script>
</body>
</html>